algoritmo "Exercício 11 da lista"
var
produto,percentual,novopreco,valor:real
inicio
//entrada
Escreva("Valor do produto antes: ")
Leia(produto)
Escreva("percentual de aumento: ")
Leia(percentual)
//processo
novopreco:= produto-(percentual/100)
valor:= produto-novopreco
//saída
Escreval("novo preço: ", novopreco)
Escreva("valor do reajuste: ", valor)





fimalgoritmo
